{
  "name": "kriya",
  "version": "2.6.0",
  "main": "index.js",
  "description": "Kriya is a react/redux components library",
  "license": "MIT",
  "scripts": {
    "build": "cross-env BABEL_ENV=cjs babel --ignore \"*.spec.js,__mocks__\" ./src/ --out-dir lib",
    "start": "cross-env NODE_ENV=development webpack-dev-server --host 0.0.0.0 --inline --hot --port=3000 --history-api-fallback --watch-poll=1000",
    "lint:js": "eslint --cache --ext js,jsx src",
    "lint:sass": "sass-lint -v -q",
    "lint": "npm-run-all --parallel lint:*",
    "test": "jest",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "transform": {
      ".*": "./node_modules/babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "misc"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/misc/__mocks__/fileMock.js",
      "\\.(css|scss|less|sass)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./misc/testSetup.js"
    ]
  },
  "sasslintConfig": "./misc/sass-lint.yml",
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "babel"
    ],
    "globals": {
      "fetch": false
    },
    "env": {
      "browser": true
    },
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "arrow-body-style": 0,
      "import/prefer-default-export": 0,
      "react/forbid-prop-types": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "import/extensions": 0,
      "func-names": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/no-danger": 0
    }
  },
  "babel": {
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread",
      "transform-inline-environment-variables"
    ],
    "presets": [
      "es2017",
      "es2015",
      "react"
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-syntax-class-properties": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-plugin-transform-inline-environment-variables": "^0.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-register": "^6.24.0",
    "classnames": "^2.2.5",
    "coveralls": "^2.13.0",
    "cross-env": "^4.0.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.0.0-rc.2",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.26.0",
    "hoc-little-router": "^1.0.0",
    "identity-obj-proxy": "^3.0.0",
    "intl": "^1.2.5",
    "jest": "^19.0.2",
    "node-sass": "^4.3.0",
    "normalize.css": "^5.0.0",
    "npm-run-all": "^4.0.2",
    "postcss-loader": "^1.2.2",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.5.4",
    "react-hot-loader": "3.0.0-beta.6",
    "react-test-renderer": "^15.4.2",
    "recompose": "^0.22.0",
    "redux-little-router": "13.1.2",
    "redux-saga": "^0.14.3",
    "sass-lint": "^1.10.2",
    "sass-loader": "^4.1.1",
    "sinon": "^2.1.0",
    "style-loader": "^0.13.1",
    "webpack": "beta",
    "webpack-dev-server": "2.2.0"
  },
  "peerDependencies": {
    "classnames": "^2.2.5",
    "react": "^15.4.2",
    "recompose": "^0.22.0"
  },
  "dependencies": {
    "kriya-select": "^1.0.3",
    "prop-types": "^15.5.8",
    "react-img-fallback": "^1.0.0",
    "react-ink": "^6.2.0",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-form": "^7.1.1"
  }
}
